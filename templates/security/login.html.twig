{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h4>Authentification</h4>
    <label for="inputEmail" class="sr-only">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        OK
    </button>
</form>
    <br />
    <hr />
    <br />
    <a href="{{ path("connect_google") }}" class="btn"><img src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg" class="social-logo"  /> Se connecter avec Google</a>
    <br /><br />
    <a href="{{ path("connect_facebook") }}" class="btn"><img src="https://cdn.worldvectorlogo.com/logos/facebook-2.svg" class="social-logo" /> Se connecter avec Facebook</a>
{% endblock %}