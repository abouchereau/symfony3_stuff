
{% extends 'base.html.twig' %}

{% block title %}Recherche Elastica{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
    <form action="" method="GET">
         <div class="input-field col s6">
          <i class="material-icons prefix">search</i>
          <input id="q" name="q" type="text" class="validate">
          <label for="q">Recherche</label>
        </div>
        <input type="submit" class="btn" value="GO" />
    </form>
    {%  if q is defined %}
        <p>Recherche pour : <b>{{ q }}</b></p>
    {% endif %}
    

    <div class="collection">
    {% for point in points %}
        <a class="collection-item" href="{{ path('point_edit', {'id': point._id|replace({"point_":""}) }) }}">{{ point._source.name }} : {{ point._source.description }}</a>
    {%  endfor %}
    </div>

{% endblock %}
{%  block javascripts %}

{% endblock %}